COMPILER Aritmetica    
	
(.
/*--------------Scanner Especification----------*/
.)

CHARACTERS 

upletter = 'A' .. 'C'.
downletter = 'a' .. 'c'.
letter = "a" + upletter + downletter. 
digit = "012" .
hexdigit = digit + "ABCDEF".
hexterm = 'H'.
tab = CHR(9).
eol = CHR(10).
whitespace = CHR(13)+eol+tab+CHR(13).
sign ='+'+'-'.

KEYWORDS

while = "while".
do = "do".

TOKENS


hexnumber = hexdigit{hexdigit}hexterm .
whitetoken = whitespace{whitespace}.


END Aritmetica